package com.leanproject.igsocial.reponsitory;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import com.leanproject.igsocial.dto.LoginDto;
import com.leanproject.igsocial.model.Person;

@Repository
public class LoginReponsitory {
	Connection conn;
	String connectionUrl = "jdbc:mysql://localhost:3308/igfake";

	LoginReponsitory() {
		
	}

	private void connect() {
		try {
			conn = DriverManager.getConnection(connectionUrl, "root", "an123");
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	public Person login(String username) {
		PreparedStatement ps;
		Person person = new Person();
		
		try {
			 connect();
			ps = conn.prepareStatement("select * from  person u where u.username = "+"\""+ username + "\""+" ;");
			
			ResultSet rs = ps.executeQuery();
			while (rs.next()) {
				person.setName(rs.getString("id"));	
				person.setDescription(rs.getString("description"));			}
			
		} catch (SQLException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		return person;

	}
}
