package com.leanproject.igsocial.service;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.core.userdetails.UserDetails;
import org.springframework.security.core.userdetails.UserDetailsService;
import org.springframework.security.core.userdetails.UsernameNotFoundException;
import org.springframework.stereotype.Service;

import com.leanproject.igsocial.dao.MyUserDetail;
import com.leanproject.igsocial.dto.LoginDto;
import com.leanproject.igsocial.model.Person;
import com.leanproject.igsocial.reponsitory.LoginReponsitory;

@Service
public class LoginService implements UserDetailsService{
	
	@Autowired
	private LoginReponsitory loginReponsitory;
	public boolean login(LoginDto loginDto) {
//		Person person = loginReponsitory.login(loginDto.getUsername());
//		System.out.println(person.getDescription());
//		if(person != null) {
//			return true;
//		} ;
		return false;
	}
	@Override
	public UserDetails loadUserByUsername(String username) throws UsernameNotFoundException {
		// TODO Auto-generated method stub
		
		Person person = loginReponsitory.findPersonByUsername(username);
		System.out.println(person.getDescription());
		if(person == null) {
			throw new UsernameNotFoundException("Could not find user");
		} ;
		return new MyUserDetail(person);
	}
}
