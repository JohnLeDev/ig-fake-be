package com.leanproject.igsocial.reponsitory;

import java.util.Optional;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.leanproject.igsocial.model.Person;

@Repository
public interface LoginReponsitory extends JpaRepository<Person,Integer>{
	
	
	@Query("select p from person p where p.username = :username )
	Optional<Person>  findPersonByUserName(@Param("username") String username );
	
}
